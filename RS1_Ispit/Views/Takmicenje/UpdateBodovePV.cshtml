<h4>UpdateOcjenaVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form ajax-poziv="da" ajax-rezultat="ajaxDiv" action="/Takmicenje/UpdateBodova">
            <input asp-for="TakmicenjeUcesinkID" hidden="hidden" />
            <div class="form-group">
                <h2>Student: @Model.ImePrezime</h2>
                <span asp-validation-for="ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bodovi" class="control-label"></label>
                <input asp-for="Bodovi" class="form-control" />
                <span asp-validation-for="Bodovi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Snimi</button>
            </div>
        </form>
    </div>
</div>