@model TakmicenjeDodajVM

@{
    ViewData["Title"] = "DodajTakmicenje";
}

<h2>DodajTakmicenje</h2>

<h4>Takmicenje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h5>Skola domacin: @Model.Skola</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input hidden="hidden" style="visibility:hidden" asp-for="SkolaID" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Predmeti" class="control-label"></label>
                <select asp-for="Predmet" asp-items="@Model.Predmeti"></select> 
            </div>

            <div class="form-group">
                <label asp-for="Razred" class="control-label"></label>
                <select asp-for="Razred" asp-items="@Model.Razredi"></select>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

